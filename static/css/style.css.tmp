  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}

.compose-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.compose-content {
  flex: 1;
}

.compose-input {
  width: 100%;
  border: none;
  resize: none;
  font-size: 1.1rem;
